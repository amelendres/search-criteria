<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Appto\Booking\Domain\Request\BookingRequest" table="boo_request" >
        <embedded name="id" class="Appto\Booking\Domain\Request\BookingRequestId" use-column-prefix="false"/>
        <embedded name="boatId" class="Appto\Booking\Domain\Request\BoatId" use-column-prefix="false"/>
        <embedded name="portId" class="Appto\Booking\Domain\Request\PortId" use-column-prefix="false"/>
        <embedded name="numberOfPassengers" class="Appto\Common\Domain\Number\NaturalNumber"/>
        <embedded name="bookingDates" class="Appto\Common\Domain\DateTime\TimePeriod"/>
        <embedded name="requester" class="Appto\Booking\Domain\Request\Requester"/>
        <field name="comment"/>
        <field name="isAvailable" type="boolean"/>
        <embedded name="price" class="Appto\Common\Domain\Money\Price"/>
    </entity>
</doctrine-mapping>
